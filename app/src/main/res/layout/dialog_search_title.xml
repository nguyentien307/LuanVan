<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/rg_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb_song"
        android:layout_marginLeft="@dimen/radio_group_margin_left">

        <RadioButton
            android:id="@+id/rb_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song"
            android:textSize="@dimen/search_title_name"/>

        <RadioButton
            android:id="@+id/rb_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Album"
            android:textSize="@dimen/search_title_name"/>

        <RadioButton
            android:id="@+id/rb_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="@dimen/search_title_name"/>

        <RadioButton
            android:id="@+id/rb_composer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Composer"
            android:textSize="@dimen/search_title_name"/>

    </RadioGroup>

</LinearLayout>